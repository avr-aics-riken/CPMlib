#! /bin/sh

prefix=@prefix@
exec_prefix=@exec_prefix@
includedir=@includedir@
libdir=@libdir@

usage()
{
    cat <<EOF

Usage: cpm-config [OPTION]

Known values for OPTION are:

  --cxx       print C++ compiler command
  --fc        print Fortran90 compiler command
  --fclink    print Fortran90 program linker command
  --cflags    print C/C++ pre-processor and compiler flags
  --fcflags   print Fortran90 pre-processor and compiler flags
  --libs      print library linking information for C++ program
  --fclibs    print library linking information for Fortran90 program
  --help      display this help and exit
  --version   output version information

EOF

    exit $1
}

if test $# -eq 0; then
    usage 1
fi

cflags=false
libs=false

while test $# -gt 0; do
    case "$1" in
    -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
    *) optarg= ;;
    esac

    case "$1" in
    --version)
      echo @VERSION@
      exit 0
      ;;

    --help)
      usage 0
      ;;

    --cxx)
      echo @CPM_CXX@
      ;;

    --fc)
      echo @CPM_FC@
      ;;

    --fclink)
      echo @CPM_FC_LD@
      ;;

    --cflags)
      echo @CPM_CFLAGS@ @MPICH_CFLAGS@ @TP_CFLAGS@ @REALOPT@
      ;;

    --fcflags)
      echo @CPM_CFLAGS@ @MPICH_CFLAGS@ @FREALOPT@
      ;;

    --libs)
      echo @CPM_LDFLAGS@ @CPM_LIBS@ @MPICH_LDFLAGS@ @MPICH_LIBS@ @TP_LDFLAGS@ @TP_LIBS@
      ;;

    --fclibs)
      echo @CPM_LDFLAGS@ @CPM_LIBS@ @MPICH_LDFLAGS@ @MPICH_FCLIBS@ @TP_LDFLAGS@ @TP_LIBS@
      ;;

    *)
      usage
      exit 1
      ;;
    esac
    shift
done

exit 0
